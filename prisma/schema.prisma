generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  email    String  @unique
  password String
  admin    Boolean
}

type registroAluno {
  mentor   String
  dia      String
  registro String
}

type AvaliacaoAluno {
  qualidade Int @default(0)
  area      String
  comentario String?
}

model Alunos {
  id                   String           @id @default(auto()) @map("_id") @db.ObjectId
  name                 String
  email                String           @unique
  avaliacoes           AvaliacaoAluno[] 
  mentor               String
  instituicao          String
  nivelDeEducacao      String
  registrosSobreOAluno registroAluno[] // Registros Diarios
}

model Mentores {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  name             String
  email            String
  alunosMentorados String[] 
}

model Competencias {
  id                   String   @id @default(auto()) @map("_id") @db.ObjectId
  aluno                String
  mentorDoAluno        String
  principalCompetencia String
  outrasCompetencias   String[]
  avaliacaoDoAluno     String
}

model Infos {
  id                   String   @id @default(auto()) @map("_id") @db.ObjectId
  niveisDeEducacao String[]
  instituicoes String[]
}